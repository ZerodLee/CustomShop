<!--pages/checkout/checkout.wxml-->

<view class="page">
    <view class="address"></view>
    <view class="cart-list">
        <view class="pro-item">
            <view class="pro-img shrink-0"><image class="full-w full-h" src="/asset/img/pro.png" mode="widthFix" /></view>
            <view class="pro-info">
                <view class="pro-title text-overflow-2">商品名字的名字名字商品名字的名字名字商品名字的名字名字商品名字的名字名字</view>
                <view class="pro-prop text-overflow">鞋子 ✍🏻 1.55kg brown</view>
                <view class="amount">
                    <view class="price main-color">￥125.00</view>
                    <view class="number">
                        <view >x1</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="setting-list mt-2">
        <view class="item">
            <view class="item-title">邮费</view>
            <view class="arrow"><view class="main-color">免邮费</view></view>
        </view>
        <view class="item">
            <view class="item-title">商品金额</view>
            <view class="arrow">共1件商品，合计<text class="main-color">123.00</text>元</view>
        </view>
        <view class="item">
            <view class="item-title">积分抵扣（可用积分100，可抵扣1.00元）</view>
            <view class="arrow"><switch color="#f32f52" bindchange="switch2Change"/></view>
        </view>
        <view class="item">
            <view class="item-title item-inout">
                <input bindinput="bindRemarkInput" maxlength="50" placeholder="订单备注：选填，给卖家留言（限50个字）" />
            </view>
        </view>
    </view>
    <view class="checkout-bar">
        <view class="all-check">
            
        </view>
        <view class="summary">
            <view class="amount">合计：<text class="main-color">0.00</text></view>
            <view class="btn-buy">提交订单</view>
        </view>
    </view>
</view>