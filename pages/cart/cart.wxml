<!--pages/cart/cart.wxml-->
<view class="page">
    <view class="cart-empty" wx:if="{{cartList.length != 0}}">
        购物车暂无商品
    </view>
    <view class="cart-list" wx:else>
        <view class="pro-box">
            <view class="edit-bar">
                <view class="edit-item">编辑</view>
            </view>
            <view class="pro-item">
                <checkbox-group class="shrink-0" bindchange="checkboxChange">
                <label class="check-btn">
                    <checkbox hidden value="{{allCheck}}" checked="{{allCheck}}"></checkbox>
                    <view class="middle-text check-icon"><icon type="success" size="19" color="#f32f52" style="opacity:{{allCheck ? 1: 0}}"/></view>
                </label>
                </checkbox-group>
                <view class="pro-img shrink-0"><image class="full-w full-h" src="/asset/img/pro.png" mode="widthFix" /></view>
                <view class="pro-info">
                    <view class="pro-title text-overflow-2">商品名字的名字名字商品名字的名字名字商品名字的名字名字商品名字的名字名字</view>
                    <view class="pro-prop text-overflow">鞋子 ✍🏻 1.55kg brown</view>
                    <view class="amount">
                        <view class="price main-color">￥125.00</view>
                        <view class="number">
                            <view >x1</view>

                        </view>
                    </view>
                </view>
            </view>
        </view>
        
    </view>
    <view class="checkout-bar">
        <view class="all-check">
            <checkbox-group bindchange="checkboxChange">
              <label>
                <checkbox hidden value="{{allCheck}}" checked="{{allCheck}}"></checkbox>
                <view class="middle-text check-icon"><icon type="success" size="19" color="#f32f52" style="opacity:{{allCheck ? 1: 0}}"/></view>
                <text class="middle-text">全选</text>
              </label>
            </checkbox-group>
        </view>
        <view class="summary">
            <view class="amount">合计：<text class="main-color">0.00</text></view>
            <view class="btn-buy">结算</view>
        </view>
    </view>
</view>
