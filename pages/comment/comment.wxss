/* pages/comment/comment.wxss */
@import '../../asset/style/inputs';
@import '../../asset/style/image.wxss';
.weui-cells{
    font-size: 15px;
}
.cart-list .pro-item{
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #fcfcfc;
}
.pro-item .shrink-0{
    flex-shrink: 0;
}
.pro-item .pro-info{
    flex-grow: 1;
    height: 22vw;
    padding-left: 10px;
    display: flex;
    flex-direction: column;
    font-size: 13px;
}
.pro-item .check-btn{
    padding: 0 4vw;
}
.pro-item .check-icon{
    margin: 0;
}
.pro-item .pro-img{
    width: 22vw;
    height: 22vw;
}
.pro-info .pro-prop{
    font-size: 12px;
    color: #bbb;
    margin-top: 5px;
}
.pro-info .amount{
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
.checkout-bar{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}
.summary{
    display: flex;
    align-items: center;
    text-align: center;
    border-top: 1px solid #eee;
}
.summary .btn{
    padding: 3.2vw 9vw;
    font-size: 14px;
}
.summary .btn-buy{
    background-color: #f32f52;
    color: #fff;
}

.page{
    padding-bottom: 45px;
}
.weui-textarea-counter{
    text-align: right;
}

