<!--pages/signUp/signUp.wxml-->
<view class='page'>
    <view class="weui-cells weui-cells_after-title t-16">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='number' bindinput='bindPhone' placeholder="请输入手机号码" />
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">验证码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='number' value='{{vcode}}' bindinput='bindVcode' focus='{{vcodeFocus}}'
                    placeholder="请输入验证码" />
            </view>
            <view class="weui-cell__ft">
                <view class="weui-vcode-btn {{vcodeDisabled?'disable':''}}" bindtap='getVcode'>{{vcodeText}}</view>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">密码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='password' bindinput='bindPassword' placeholder="请输入6~12位密码" />
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">新密码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type='password' bindinput='bindNewPassword' placeholder="请输入重新密码" />
            </view>
        </view>
    </view>
    <view class="btns">
        <button class="login-btn full-button" bindtap="comfirm">完 成 注 册</button>
    </view>
</view>