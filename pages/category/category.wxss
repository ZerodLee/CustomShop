/* pages/category/category.wxss */
.category-wrap{
    padding: 10px;
}
.category-name{
    display: flex;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
}
.category-name .name-tag{
    height: 18px;
    width: 5px;
    border-radius: 5px;
    overflow: hidden;
    background-color: #f32f52;
    margin-right: 10px;
}
.category-items{
    flex-wrap: wrap;
    padding: 2vw 0;
}
.category-item{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3vw 2vw;
    flex-shrink: 0;
    box-sizing: border-box;
}
.category-item .item-img{
    width: 80%;
}
.item-img image{
    border-radius: 50vw;
    overflow: hidden;
}
.category-item .name{
    max-width: 100%;
}