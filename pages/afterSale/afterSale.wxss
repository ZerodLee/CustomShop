/* pages/afterSale/afterSale.wxss */
.order-list{
    background-color: #fff;
}
.order-list .order-item{
    border-bottom: 5px solid #fef8fe;
}
.order-item .order-state{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.order-state .iconfont{
    font-size: 20px;
    margin-right: 5px;
}
.cart-list .pro-item{
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #fcfcfc;
}
.pro-item .shrink-0{
    flex-shrink: 0;
}
.pro-item .pro-info{
    flex-grow: 1;
    height: 22vw;
    padding-left: 10px;
    display: flex;
    flex-direction: column;
    font-size: 13px;
}
.pro-item .check-btn{
    padding: 0 4vw;
}
.pro-item .check-icon{
    margin: 0;
}
.pro-item .pro-img{
    width: 22vw;
    height: 22vw;
}
.pro-info .pro-prop{
    font-size: 12px;
    color: #bbb;
    margin-top: 5px;
}
.pro-info .amount{
    margin-top: auto;
    display: flex;
    justify-content: space-between;
}

.order-info{
    padding: 15px;
    border-bottom: 1px solid #eee;
    
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.btns{
    padding: 10px 15px;
    display: flex;
    justify-content: flex-end;
}
