<!--pages/orderList/orderList.wxml-->
<view class="page">
    <view class="tab-bar">
        <view class="tab button-effect {{listIndex == switchItems.all?'active':''}}" data-index="{{switchItems.all}}" bindtap="switchTab">全部</view>
        <view class="tab button-effect {{listIndex == switchItems.topay?'active':''}}" data-index="{{switchItems.topay}}" bindtap="switchTab">待付款</view>
        <view class="tab button-effect {{listIndex == switchItems.toShip?'active':''}}" data-index="{{switchItems.toShip}}" bindtap="switchTab">待发货</view>
        <view class="tab button-effect {{listIndex == switchItems.toSigning?'active':''}}" data-index="{{switchItems.toSigning}}" bindtap="switchTab">待收货</view>
        <view class="tab button-effect {{listIndex == switchItems.toComment?'active':''}}" data-index="{{switchItems.toComment}}" bindtap="switchTab">待评价</view>
    </view>
    <view class="list-wrap mt-2">
        <swiper duration="300" current="{{listIndex}}" bindchange="swiperChange">
            <block wx:for="{{orderList}}" wx:key wx:for-index="idx" wx:for-item="order">
                <swiper-item>
                    <view class="order-list">
                        <view class="order-item">
                            <view class="order-state p-2">
                                <view class="iconfont icon-shijian secondary-color"></view>
                                <view class="time secondary-color">2015-05-05 15:12 {{idx}}</view>
                                <view class="main-color ml-auto">交易关闭</view>
                            </view>
                            <view class="cart-list">
                                <view class="pro-item">
                                    <view class="pro-img shrink-0"><image class="full-w full-h" src="/asset/img/pro.png" mode="widthFix" /></view>
                                    <view class="pro-info">
                                        <view class="pro-title text-overflow-2">商品名字的名字名字商品名字的名字名字商品名字的名字名字商品名字的名字名字</view>
                                        <view class="pro-prop text-overflow">鞋子 ✍🏻 1.55kg brown</view>
                                        <view class="amount">
                                            <view class="price main-color">￥125.00</view>
                                            <view class="number">
                                                <view >x1</view>
                                            </view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                            <view class="order-info">
                                共1件商品，合计<text class="t-16">￥125.00</text>（含运费0.00元）
                            </view>
                            <view class="btns">
                                <view class="btn-outline button-effect">取消订单</view>
                                <view class="btn-outline red button-effect">删除订单</view>
                            </view>
                        </view>
                    </view>
                </swiper-item>
            </block>
        </swiper>
    </view>
</view>
