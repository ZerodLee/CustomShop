/**app.wxss**/
@import '/asset/font/iconfont';
page{
  font-size: 14px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.page{
  width: 100vw;
  min-height: 100vh;
  position: relative;
  background-color: #fef8fe;
}
.main-color{
  color: #f32f52;
}
.second-color{
  color: #ffb030;
}
.secondary-color{
  color: #888;
}
.button-effect{
  transition: 0.2s;
}
.button-effect:active{
  background-color: rgba(0, 0, 0, 0.15)
}
.img-fixed-width{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  overflow: hidden;
}
.img-fixed-width image{
    width: 100%;
    flex-shrink: 0;
}
.d-show{
  display: block;
}
.d-hide{
  display: none;
}
.flex{
  display: flex;
}
.full-w{
  width: 100% !important;
}
.full-h{
  height: 100% !important;
}
.p-1{
  padding: 5px;
}
.p-2{
  padding: 10px;
}
.p-3{
  padding: 15px;
}
.pl-0{
  padding-left: 0 !important;
}
.pl-1{
  padding-left: 5px;
}
.pl-4{
  padding-left: 20px;
}
.pr-0{
  padding-right: 0 !important;
}
.pr-2{
  padding-right: 10px;
}
.mt-2{
  margin-top: 10px;
}
.mt-4{
  margin-top: 20px;
}
.mb-1{
  margin-bottom: 5px;
}
.ml-auto{
  margin-left: auto;
}
.mr-1{
  margin-right: 5px;
}
.mr-2{
  margin-right: 10px;
}
.row{
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.row .col-1{
  width: 8.33%;
}
.row .col-2{
  width: 16.67%;
}
.row .col-3{
  width: 25%;
}
.row .col-4{
  width: 33.33%;
}
.row .col-5{
  width: 41.67%;
}
.row .col-6{
  width: 50%;
}
.row .col-7{
  width: 58.33%;
}
.row .col-8{
  width: 66.67%;
}
.row .col-9{
  width: 75%;
}
.row .col-10{
  width: 83.33%;
}
.t-10{
  font-size: 10px;
}
.t-12{
  font-size: 12px;
}
.t-14{
  font-size: 14px;
}
.t-16{
  font-size: 16px;
}
.t-18{
  font-size: 18px;
}
.font-blod{
  font-weight: bold;
}
.text-center{
  text-align: center;
}
.text-overflow{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.text-overflow-2{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.float-l{
  float: left;
}
.float-r{
  float: right;
}
.full-button{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #fff;
  background-color: #f32f52;
}
.full-button:active{
  opacity: 0.8;
}
.button-effect{
  transition: background-color 0.2s;
}
.button-effect:active{
  background-color: #eee !important;
}

.setting-list{
  background-color: #fff;
}
.setting-list .item{
  padding: 15px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #dfdfdf;
  background-color: #fff;
  transition: background-color 0.2s;
}
.setting-list .item:last-child{
  border-bottom: 0;
}
.setting-list .item:active{
  background-color: #eee;
}
.item .arrow{
  margin-left: auto;
  display: flex;
  align-items: center;
  font-size: 14px;
  line-height: 14px;
  color: #aaa;
}
.arrow .iconfont{
  margin-left: 5px;
  font-size: 12px;
  color: #aaa;
}

.btns .btn-outline{
  margin-left: 10px;
  padding: 3px 10px;
  border: 1px solid #aaa;
  border-radius: 3px;
  color: #aaa;
  background-color: #fff
}
.btns .btn-outline.red{
  border-color:  #f32f52;
  color: #f32f52;
}